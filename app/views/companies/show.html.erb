<style type="text/css">
  .rounded-10{
    border-radius: 10px;
  }
</style>

<div class="container py-5">
  <h3>Company</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Companies", companies_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Delete", @company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <%= link_to "Edit", edit_company_path, class: "btn btn-info" %>
    </div>
  </div>
  <div class="bg-success rounded-10" style="margin-top: 20px; background-color: <%= @company.color %> !important">
    <div class="container p-5 text-white">
      <h1><%= @company.name %></h1>
      <h3><mark><%= @company.city %>, <%= @company.state %></mark></h3>

    </div>
  </div>

  <div class="row bg-light">
    <div class="col-12 col-lg-8 p-lg-5 pt-4">
      <%= @company.description %>
    </div>
    <div class="col-12 col-lg-4 pt-lg-5">
      <h4>Services</h4>
      <% @company.services.reject(&:blank?).each do |service| %>
        <p><%= service %></p>
      <% end %>
      <h4>Contact</h4>
        <div class="form-group" data-controller="clipboard">
          <p><%= @company.phone %><br>
          <input type="hidden" value="<%= @company.phone %>" data-target="clipboard.source"></input>
          <a data-action="clipboard#copy" class="clipboard-button pointer text-decoration-none text-dark"> copy</a>
          <a data-target="clipboard.notice" class="clipboard-button pointer d-none text-decoration-none text-dark" class="d-none"> copied</a> 
          </p>         
        </div>
    </div>
  </div>

  <div class="bg-success rounded-10 text-white text-center py-3" style="margin-bottom: 20px; background-color: <%= @company.color %> !important">
    <p class="lead"><%= @company.phone %> — <%= @company.email %></p>
  </div>
</div>
